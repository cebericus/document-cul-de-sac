<%# Example: <%= render "shared/error_messages", :target => @user %>

<% if target.errors.any? %>  
<div id="errors">  
  <h2>This transaction not complete because of <%= pluralize(target.errors.count, "error") %>.</h2>  
  <ul>  
  <% target.errors.full_messages.each do |msg| %>  
    <li><%= msg %></li>  
  <% end %>  
  </ul>  
</div>  
<% end %> 
<%= form_for @user do |form| %>
  
  <table class="tables">  
    <tr>
      <td align="right"><%= form.label :login, "Username" %></td>  
      <td align="left"><%= form.text_field :login %></td>   
    </tr>
    <tr>
      <td align="right"><%= form.label :password, "Password" %></td>   
      <td align="left"><%= form.password_field :password %></td>   
    </tr>
    <tr> 
      <td align="right"><%= form.label :password_confirmation, "Confirm password" %></td>  
      <td align="left"><%= form.password_field :password_confirmation %></td>   
    </tr>
    <tr>
      <td align="right"><%= form.label :admin_rights, "Admin rights? " %></td>
      <td align="left"><%= check_box_tag 'admin_rights' %></td>
    </tr>
  </table>
  <%= render "shared/error_messages", :target => @user %>
  <br>
  <%= form.submit "Submit" %>
<% end %> 
